---
import { getCollection } from 'astro:content'
import { Image } from 'astro:assets'
import Layout from '../../../layouts/Layout.astro'
import TranslationNotice from '../../../components/TranslationNotice.astro'
import { css } from '../../../../styled-system/css'
import type { InferGetStaticPropsType, GetStaticPaths } from 'astro'

const lang = 'en'

type Props = InferGetStaticPropsType<typeof getStaticPaths>

export const getStaticPaths = (async () => {
  const worksEntries = await getCollection('works', ({ id }) => id.startsWith('en/'))
  return worksEntries.map(entry => ({
    params: { slug: entry.slug.replace(/^en\//, '') },
    props: { entry, tags: entry.data.tags },
  }))
}) satisfies GetStaticPaths

const { entry } = Astro.props
const { Content } = await entry.render()
const slugWithoutLang = entry.slug.replace(/^en\//, '')
const alternateSlug = entry.data.translationSlug ? `works/${entry.data.translationSlug}` : undefined
---

<Layout title={entry.data.title} description={entry.data.description} thumbnail={entry.data.cover.src} lang={lang} alternateSlug={alternateSlug}>
  <main
    class={css({
      display: 'flex',
      flexDirection: 'column',
      alignItems: 'center',
      height: '100%',
      width: '100%',
    })}
  >
    <div
      class={css({
        maxWidth: '850px',
        width: '100vw',
        px: '16px',
        pt: '48px',
        pb: '64px',
      })}
    >
      <Image
        src={entry.data.cover}
        alt={entry.data.title}
        class={css({
          width: '100%',
          height: 'auto',
          borderRadius: '6px',
        })}
        transition:name={entry.data.cover.src}
      />
      <h1 transition:name={entry.data.title}>{entry.data.title}</h1>
      <div
        class={css({
          mt: '-6px',
          mb: '48px',
          width: '100%',
          color: 'textSecond',
        })}
      >
        <div>
          {
            entry.data.tags.map(tag => (
              <span
                class={css({
                  display: 'inline-block',
                  px: '6px',
                  mr: '6px',
                  my: '4px',
                  borderRadius: '4px',
                  fontSize: '0.8rem',
                  border: '1px solid',
                })}
              >
                {tag}
              </span>
            ))
          }
        </div>
        <div class={css({ fontSize: '0.9rem', mt: '4px' })}>
          {entry.data.date}
        </div>
      </div>
      <TranslationNotice />
      <Content />
    </div>
  </main>
</Layout>
