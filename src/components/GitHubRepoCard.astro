---
import { css } from '../../styled-system/css'

interface Props {
  owner: string
  repo: string
  description?: string
  language?: string
  languageColor?: string
  stars?: number
  forks?: number
}

const { owner, repo, description, language, languageColor = '#dea584', stars, forks } = Astro.props
const repoUrl = `https://github.com/${owner}/${repo}`
---

<a
  href={repoUrl}
  target="_blank"
  rel="noopener noreferrer"
  class={css({
    display: 'block',
    bg: 'bgSecond',
    borderRadius: '8px',
    borderLeft: '3px solid',
    borderLeftColor: 'primary',
    p: '16px 20px',
    my: '24px',
    textDecoration: 'none !important',
  })}
>
  <!-- Header: GitHub icon + repo name -->
  <div
    class={css({
      display: 'flex',
      alignItems: 'center',
      gap: '10px',
      mb: description ? '10px' : '0',
    })}
  >
    <!-- GitHub Icon -->
    <svg
      viewBox="0 0 16 16"
      class={css({
        width: '20px',
        height: '20px',
        flexShrink: 0,
        fill: 'textSecond',
      })}
    >
      <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z" />
    </svg>

    <!-- Repo name -->
    <span
      class={css({
        fontFamily: `Consolas, 'Courier New', monospace`,
        fontSize: '1rem',
        fontWeight: '600',
        color: 'text',
      })}
    >
      {owner}/<span class={css({ color: 'primary' })}>{repo}</span>
    </span>
  </div>

  <!-- Description -->
  {
    description && (
      <p
        class={css({
          fontSize: '0.9rem',
          lineHeight: '1.5',
          color: 'textSecond',
          m: '0 0 12px 0',
        })}
      >
        {description}
      </p>
    )
  }

  <!-- Footer: language, stars, forks -->
  <div
    class={css({
      display: 'flex',
      alignItems: 'center',
      gap: '16px',
      fontSize: '0.8rem',
      color: 'textSecond',
    })}
  >
    <!-- Language -->
    {
      language && (
        <span class={css({ display: 'flex', alignItems: 'center', gap: '6px' })}>
          <span
            class={css({
              width: '12px',
              height: '12px',
              borderRadius: '50%',
              flexShrink: 0,
            })}
            style={`background-color: ${languageColor};`}
          />
          {language}
        </span>
      )
    }

    <!-- Stars -->
    {
      stars !== undefined && (
        <span class={css({ display: 'flex', alignItems: 'center', gap: '4px' })}>
          <svg
            viewBox="0 0 16 16"
            class={css({ width: '14px', height: '14px', fill: 'textSecond' })}
          >
            <path d="M8 .25a.75.75 0 01.673.418l1.882 3.815 4.21.612a.75.75 0 01.416 1.279l-3.046 2.97.719 4.192a.75.75 0 01-1.088.791L8 12.347l-3.766 1.98a.75.75 0 01-1.088-.79l.72-4.194L.818 6.374a.75.75 0 01.416-1.28l4.21-.611L7.327.668A.75.75 0 018 .25z" />
          </svg>
          {stars}
        </span>
      )
    }

    <!-- Forks -->
    {
      forks !== undefined && (
        <span class={css({ display: 'flex', alignItems: 'center', gap: '4px' })}>
          <svg
            viewBox="0 0 16 16"
            class={css({ width: '14px', height: '14px', fill: 'textSecond' })}
          >
            <path d="M5 5.372v.878c0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75v-.878a2.25 2.25 0 111.5 0v.878a2.25 2.25 0 01-2.25 2.25h-1.5v2.128a2.251 2.251 0 11-1.5 0V8.5h-1.5A2.25 2.25 0 013 6.25v-.878a2.25 2.25 0 111.5 0zM5 3.25a.75.75 0 10-1.5 0 .75.75 0 001.5 0zm6.75.75a.75.75 0 10 0-1.5.75.75 0 000 1.5zm-3 8.75a.75.75 0 10-1.5 0 .75.75 0 001.5 0z" />
          </svg>
          {forks}
        </span>
      )
    }
  </div>
</a>
