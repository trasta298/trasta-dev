---
import { css } from '../../styled-system/css'
import { useTranslations, getLocalePath, type Lang } from '../i18n/utils'
import LanguageSwitcher from './LanguageSwitcher.astro'

interface Props {
  lang: Lang
}

const { lang } = Astro.props
const t = useTranslations(lang)
const privacyPolicyPath = getLocalePath('/privacy-policy', lang)
---

<footer
  class={css({
    w: '100%',
    h: '64px',
    display: 'flex',
    alignItems: 'center',
    justifyContent: 'center',
    bg: 'bgSecond',
    color: 'textSecond',
  })}
>
  <div class={css({ fontSize: '14px', display: 'flex', alignItems: 'center', gap: '24px' })}>
    <div>Â© 2023-2026 trasta</div>
    <a
      href={privacyPolicyPath}
      class={css({ color: 'textSecond', textDecoration: 'underline' })}
      >{t('footer.privacyPolicy')}</a
    >
    <LanguageSwitcher lang={lang} />
  </div>
</footer>
